{
  "name": "produktkonfigurator",
  "version": "1.0.0",
  "description": "Produktschl√ºsselkonfigurator - Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:backend": "node build-backend.js",
    "build:frontend": "node build-frontend.js",
    "build:win": "npm run build:backend && npm run build:frontend && electron-builder --win"
  },
  "build": {
    "appId": "com.produktkonfigurator.app",
    "productName": "Produktkonfigurator",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "main.js",
      "preload.js",
      "loading.html",
      "resources/**/*"
    ],
    "asarUnpack": [
      "loading.html"
    ],
    "extraResources": [
      {
        "from": "resources/backend/",
        "to": "backend",
        "filter": ["**/*"]
      },
      {
        "from": "resources/frontend/",
        "to": "frontend",
        "filter": ["**/*"]
      },
      {
        "from": "resources/database/",
        "to": "database",
        "filter": ["**/*"]
      }
    ],
    "directories": {
      "output": "dist"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  }
}
